if [ -z "$1" ]
then
	echo "Usage: $0 destination" >&2
	exit -1
fi

set -e

# go to project's root directory
cd "$(dirname $0)"
cd ../..

# quick check to see if we are in the right place
test -f "composer.json"

# push files
rsync -a -v --stats -h \
	--exclude='.git' \
	--exclude='data' \
	--exclude='var' \
	'./app' \
	'./vendor' \
	'./composer.json' \
	'./composer.lock' \
	'./favicon.ico' \
	'./index.php' \
	"$1/" \
	--delete-after \
#

