{% extends "base.html.twig" %}

{% block main %}
<table class="gallery_index table">
	<col><col width="100%"><col>
	<thead>
		<tr>
			<th>Date</th>
			<th>Title</th>
			<th>Modified</th>
		</tr>
	</thead>
	<tbody>
	{% for item in list %}
		<tr>
			<td class="date" nowrap>{% if item.date %}<time>{{ item.date | date(date_format) }}</time>{% endif %}</td>
			<td class="title"><a href="{{ item.url }}">{{ item.title }}</a></td>
			<td class="mtime" nowrap><time>{{ item.mtime | date(datetime_format) }}</time></td>
		</tr>
	{% endfor %}
	</tbody>
</table>
{% endblock %}

